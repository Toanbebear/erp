<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="view_form_update_line_consultants_extend" model="ir.ui.view">
            <field name="name">view.form.update.line.consultants.extend</field>
            <field name="model">update.line.consultants</field>
            <field name="inherit_id" ref="crm_tool.view_form_update_line_consultants"/>
            <field name="arch" type="xml">
                <xpath expr="//footer" position="replace">
                    <footer>
                        <button name="confirm" type="object" string="Xác nhận" class="btn-primary btn-lg fa fa-check"/>
                        <button string="Hủy thao tác" class="btn-secondary btn-lg fa fa-times" special="cancel"/>
                    </footer>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
