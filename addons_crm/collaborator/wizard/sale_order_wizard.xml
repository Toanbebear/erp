<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="collaborator_collaborator_sale_order_wizard">
            <field name="name">Cập nhật tiền CTV</field>
            <field name="model">collaborator.sale.order.wizard</field>
            <field name="arch" type="xml">
                <form string="Cập nhật tiền CTV">
                    <group string="Thông tin cập nhật">
                        <group >
                            <field name="booking_id" readonly="True"/>
                            <field name="walkin_id" readonly="True"/>
                            <field name="company_id" readonly="True"/>
                            <field name="source_id" readonly="True"/>
                        </group>
                        <group>
                            <field name="collaborator_id" readonly="True"/>
                            <field name="contract_id" readonly="True"/>
                            <field name="company_id" readonly="True"/>
                        </group>
                        <footer>
                            <button name="update" type="object" string="Cập nhật" class="oe_highlight"/>
                            <button string="Hủy" class="btn-secondary" special="cancel"/>
                        </footer>
                    </group>
                </form>
            </field>
        </record>
    </data>
</odoo>