<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="view_form_crm_stage_rest_api" model="ir.ui.view">
            <field name="name">Form.crm.stage.rest.api</field>
            <field name="model">crm.stage</field>
            <field name="inherit_id" ref="crm.crm_stage_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='is_won']" position="after">
                    <field name="rest_api"/>
                </xpath>
            </field>
        </record>

        <record id="view_tree_crm_stage_rest_api" model="ir.ui.view">
            <field name="name">Form.crm.stage.rest.api</field>
            <field name="model">crm.stage</field>
            <field name="inherit_id" ref="crm.crm_stage_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='is_won']" position="after">
                    <field name="rest_api"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>