<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="survey_user_input_report_wizard_form_view" model="ir.ui.view">
            <field name="name">survey.user.input.report.wizard.form</field>
            <field name="model">survey.user.input.report.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="survey_id"/>
                        <field name="start_date" string="Từ ngày"/>
                        <field name="end_date" string="Đến ngày"/>
                        <field name="brand_id" required="1"/>
                        <field name="stage"/>
                        <field name="type"/>
                        <field name="fetch_all"/>
                        <field name="company_ids" widget="many2many_tags"/>
                    </group>
                    <footer>
                        <button string="Xuất báo cáo" name="report_survey" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="survey_user_input_report_wizard_attachment" model="ir.attachment">
            <field name="name">Báo cáo kết quả khảo sát</field>
            <field name="type">binary</field>
            <field name="datas" type="base64" file="survey_brand/static/xls/bao_cao_ket_qua_khao_sat.xlsx"/>
            <field name="store_fname">bao_cao_ket_qua_khao_sat.xlsx</field>
        </record>

        <record model="ir.actions.act_window" id="report_survey_action">
            <field name="name">Báo cáo kết quả khảo sát</field>
            <field name="res_model">survey.user.input.report.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="survey_user_input_report_wizard_form_view"/>
            <field name="context">{}</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>
